<?xml version="1.0" encoding="utf-8"?>

<!--
 * 1 - Süre Göstergesi
 * 2 - Pause Düğmesi
 * 3 - Takım Adı
 * 4 - Skor Bilgisi
 * 5 - Kelime Kartı
 * 6 - Doğru Butonu
 * 7 - Tabu Butonu
 * 8 - Pas Butonu
 * 9 - Pas Sayısı
 -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayScreen"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/textSure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Süre : 0"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="24dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textTakim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Takım Adı:"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/imageDurakla"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pause_presentation"
            android:layout_weight="1"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/textSkor"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:text="Skor: 23"
        android:textSize="20sp"
        android:gravity="center"/>

    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="320dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/purple"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_margin="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textAnaKelime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:text="FUTBOL"
                android:textColor="@color/blue"
                android:textSize="26sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="4dp"
                android:background="@color/purple" />

            <TextView
                android:id="@+id/textKelime1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:text="Spor"
                android:textColor="@color/orange"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textKelime2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:text="Top"
                android:textColor="@color/orange"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textKelime3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:text="Kale"
                android:textColor="@color/orange"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textKelime4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:text="Oyuncu"
                android:textColor="@color/orange"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textKelime5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:text="Ofsayt"
                android:textColor="@color/orange"
                android:textSize="16dp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/purple"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <ImageView
            android:id="@+id/imagePas"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:src="@drawable/next_plan"
            android:layout_weight="1"
            app:tint="@color/orange"/>

        <ImageView
            android:id="@+id/imageTabu"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:src="@drawable/highlight_off"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/imageDogru"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:src="@drawable/check_circle"
            android:layout_weight="1"/>


    </LinearLayout>

    <TextView
        android:id="@+id/textKalanPas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Kalan Pas Hakkı: 3"
        android:gravity="center"
        android:layout_marginTop="10dp"/>




</LinearLayout>